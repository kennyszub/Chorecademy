<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddChoreActivity" >

    <ImageView
        android:id="@+id/titleReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title_reward" />
    
    <Button
        android:id="@+id/addReward"
        style="@style/BlueStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Add this Reward" 
        android:onClick="rewardSave" />
    
    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reward_name"
        android:layout_below="@+id/reward_name"
        android:text="Reward Details:"
        android:textSize="20sp"
        android:textColor="@color/DodgerBlue"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reward_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView03"
        android:ems="10"
        android:hint="Brand new, black model!"
        android:textColor="@color/DodgerBlue"
        android:textColorHint="@color/gray" />
    
    
    <TextView
        android:id="@+id/choreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleReward"
        android:text="Reward Name:"
        android:textSize="20sp"
        android:textColor="@color/DodgerBlue"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reward_details"
        android:text="Reward Points:"
        android:textSize="20sp"
        android:textColor="@color/DodgerBlue"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reward_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:ems="10"
        android:hint="Enter Reward Value!"
        android:textColor="@color/DodgerBlue"
        android:textColorHint="@color/gray" />
    
    
    <EditText
        android:id="@+id/reward_name"
        style="@color/BlueViolet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/choreName"
        android:ems="10"
        android:hint="Playstation 3"
        android:textColor="@color/DodgerBlue"
        android:textColorHint="@color/gray" >

        <requestFocus />
    </EditText>

</RelativeLayout>