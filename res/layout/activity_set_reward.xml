<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddChoreActivity" >

    <Button
        android:id="@+id/addReward"
        style="@style/BlueStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Add this Reward" 
        android:onClick="rewardSave" />

    <EditText
        android:id="@+id/reward_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addReward"
        android:layout_alignLeft="@+id/addReward"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Enter details here"
        android:textColor="@color/black"
        android:textColorHint="@color/LightSlateGray" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reward_details"
        android:layout_alignLeft="@+id/reward_details"
        android:text="Reward Details"
        android:textColor="@color/DodgerBlue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/choreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="Reward Name"
        android:textColor="@color/DodgerBlue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reward_cost"
        android:layout_below="@+id/reward_name"
        android:layout_marginTop="22dp"
        android:text="Reward Points"
        android:textColor="@color/DodgerBlue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reward_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView01"
        android:ems="10"
        android:hint="Enter points required"
        android:textColor="@color/black"
        android:textColorHint="@color/LightSlateGray" />

    <EditText
        android:id="@+id/reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/choreName"
        android:layout_below="@+id/choreName"
        android:ems="10"
        android:hint="Enter reward name!"
        android:textColor="@color/black"
        android:textColorHint="@color/LightSlateGray" >

        <requestFocus />
    </EditText>

</RelativeLayout>